{
  "compilerOptions": {
    "outFile": "myapp.js",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}